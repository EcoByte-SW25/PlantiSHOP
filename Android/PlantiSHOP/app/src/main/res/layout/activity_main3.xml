<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="25dp"
    android:background="@drawable/fondo"
    tools:context=".MainActivity3">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="152dp"
        android:layout_gravity="center"
        android:src="@drawable/logo"
        android:contentDescription="Logotipo de PlantiSHOP"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PlantiSHOP"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-medium"/>
    <LinearLayout
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:padding="5dp"
        android:background="@color/gray"
        android:alpha="0.75">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inicio de Sesi칩n"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"/>
        <TextView android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Correo Electronico:"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"/>
        <EditText android:id="@+id/ce"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textEmailAddress"
            android:maxLength="100"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            android:hint="Campo OBLIGATORIO"
            android:autofillHints="emailAddress"/>
        <TextView android:id="@+id/t2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contrase침a:"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"/>
        <EditText android:id="@+id/c1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            android:hint="Campo OBLIGATORIO"
            android:autofillHints="password"/>
        <TextView android:id="@+id/t3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contrase침a de Respaldo:"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"/>
        <EditText android:id="@+id/c2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            android:hint="Campo OBLIGATORIO"
            android:autofillHints="password"/>
        <TextView android:id="@+id/t4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Codigo de Verificaci칩n:"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:visibility="gone"/>
        <EditText android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textPassword"
            android:maxLength="10"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            android:autofillHints="password"
            android:hint="XXXXXXXXXX"
            android:visibility="gone"/>

    </LinearLayout>
    <Button android:id="@+id/R"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:text="INGRESAR"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"
        android:fontFamily="sans-serif-black"/>

</LinearLayout>