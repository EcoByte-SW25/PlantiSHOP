<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="25dp"
    android:background="@drawable/fondo"
    tools:context=".MainActivity2">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:src="@drawable/logo"
        android:contentDescription="Logotipo de PlantiSHOP"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PlantiSHOP"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-medium"/>
    <ScrollView
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:background="@color/gray"
        android:alpha="0.75">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registro de Usuarios"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Correo Electronico:"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"/>
            <EditText android:id="@+id/ce"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="textEmailAddress"
                android:maxLength="100"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:hint="Campo OBLIGATORIO"
                android:autofillHints="emailAddress"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contraseña:"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"/>
            <EditText android:id="@+id/c1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="textPassword"
                android:maxLength="20"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:hint="Campo OBLIGATORIO"
                android:autofillHints="password"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contraseña de Respaldo:"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"/>
            <EditText android:id="@+id/c2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="textPassword"
                android:maxLength="20"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:hint="Campo OBLIGATORIO"
                android:autofillHints="password"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre(s):"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"/>
            <EditText android:id="@+id/n"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="textPersonName"
                android:maxLength="25"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:autofillHints="name"
                android:hint="Campo OBLIGATORIO"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apellido Paterno:"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"/>
            <EditText android:id="@+id/ap"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="textPersonName"
                android:maxLength="15"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:autofillHints="name"
                android:hint="Campo OBLIGATORIO"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apellido Materno:"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"/>
            <EditText android:id="@+id/am"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="textPersonName"
                android:maxLength="15"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:autofillHints="name"
                android:hint="Campo OBLIGATORIO"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ubicación:"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"/>
            <androidx.fragment.app.FragmentContainerView android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>
    <Button android:id="@+id/C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:text="REGISTRAR"
        android:textColor="@color/black"
        android:backgroundTint="@color/lime"
        android:fontFamily="sans-serif-black"/>

</LinearLayout>