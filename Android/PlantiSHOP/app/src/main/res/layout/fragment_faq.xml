<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Faq">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Preguntas Frecuentes sobre la Aplicación"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"/>
    <ListView android:id="@+id/pfa"
        android:layout_width="400dp"
        android:layout_height="520dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="¿Quieres mejorar PlantiSHOP? Contacta a los Desarrolladores de EcoByte mediante el siguiente ENLACE:"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/bone"
        android:fontFamily="sans-serif-condensed"/>
    <EditText android:id="@+id/com"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:inputType="textMultiLine"
        android:autofillHints="[A-Za-z0-9]"
        android:hint="Envia un Comentario a EcoByte ;3"/>
    <Button android:id="@+id/toEB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="ENVIAR"
        android:textColor="@color/bone"
        android:backgroundTint="@color/brown"/>

</LinearLayout>